<android.support.v7.widget.CardView android:id="@+id/cardViewCollege"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_margin="3dp"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageId"
                android:background = "@drawable/kle"
                android:layout_width="match_parent"
                android:layout_height="100dp" />


            <TextView
                android:id="@+id/titleId1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KLE Institute of Techonology"
                android:textColor="@color/LightBlue"
                android:layout_marginLeft="8dp"
                android:textSize="12dp"

                android:textStyle="italic" />


            <TextView
                android:id="@+id/descriptionId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kle Institute of Techology hubballi"
                android:textSize="10dp"
                android:textColor="@color/GrayScale"
                android:layout_marginLeft="8dp"



                android:textStyle="italic" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


